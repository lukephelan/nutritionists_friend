<h2>Add a new bodyweight record to the log</h2>

<%= form_for @bodyweight do |f| %>

<% if @bodyweight.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@bodyweight.errors.count, "error") %> prohibited
      this log from being saved:
    </h2>
    <ul>
      <% @bodyweight.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_field :bodyweight_recorded_date %>
  </div>

  <div class="field">
    <%= f.label :bodyweight, "Bodyweight (kg)" %><br />
    <%= f.number_field :bodyweight_recorded_kg %>
  </div>

  <div class="actions">
    <%= f.submit "Record to log" %>
  </div>
<% end %>

<%= link_to 'Back', bodyweights_path, method: :get %>
